= content_for :box_heading do
  = @user.name

.row
  .col-md-12
    .box.box-info
      .box-header.with-border
        .row
          .col-md-6
            h3.box-title
              i.fa.fa-bars
              | &nbsp; General
      .box-body
        .row
          .col-sm-12
            table.table.table-inverse
              tbody                
                tr
                  th width="50%"
                    | Number
                  td = @user.email
                tr
                  th width="50%"
                    | Name
                  td = @user.name
                tr
                  th width="50%"
                    | Rank
                  td = @user.rank
                tr
                  th width="50%"
                    | Personal Code
                  td = @user.personal_code
                tr
                  th width="50%"
                    | Role
                  td = @user.role
                tr
                  th width="50%"
                    | Status
                  td = @user.status ? 'Active' : 'Inactive'
                tr
                  th width="50%"
                    | Work Unit Codes
                  td = @user.work_unit_codes.pluck(:code).join(', ')
                tr 
                  th width="50%"
                    | Profile Picture
                  td = image_tag @user.profile_picture.attachment(:small)

= render 'common/actions_buttons', back_path: users_path, edit_path: edit_user_path(@user)