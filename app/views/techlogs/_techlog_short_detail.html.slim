.box-body
  .row
    .col-sm-12
      table.table.table-inverse
        tbody                
          tr
            th width="25%"
              | Number
            td = techlog.serial_no
            th width="25%"
              | Opened By
            td = techlog.user.name
          tr
            th width="25%"
              | Date
            td = display_date(techlog.log_date)
            th width="25%"
              | Time
            td = techlog.log_time
          tr
            th width="25%"
              | Aircraft
            td 
              - if techlog.aircraft.present?
                = techlog.aircraft.tail_number
            th width="25%"
              | Status
            td = techlog.condition.to_s.titleize
          tr
            th width="25%"
              | Location From
            td 
              = techlog.location_from
            th width="25%"
              | Location To
            td = techlog.location_to
          tr
            th width="25%"
              | Work Unit Code
            td 
              - if techlog.work_unit_code.present?
                = techlog.work_unit_code.code
                | /
                = techlog.work_unit_code.description
            th width="25%"
              | Type
            td = techlog.type
          tr
            th width="25%"
              | Technician Name
            td
              - if techlog.closed_by.present? and @techlog.condition == :completed
                = techlog.closed_by.name  
            th width="25%"
              | Autherization Code
            td = techlog.autherization_code.autherization_code_format if techlog.autherization_code.present?
          tr
            th colspan="4"
              | Description
          tr
            td colspan="4"
              = techlog.description